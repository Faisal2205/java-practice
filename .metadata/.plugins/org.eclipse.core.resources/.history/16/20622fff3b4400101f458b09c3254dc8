package com.singleton;

public class Samosa{
	
	private static Samosa samosa;
	
	private Samosa()
	{
		
	}

	//         Lazy way to create Singleton object
	
	public static Samosa getSamosa()
	{
		if(samosa == null)
		{
			try {
				Thread.sleep(1000);
			}
			catch (InterruptedException e) {
				e.printStackTrace();
			}
					samosa = new Samosa();
				
			
		}
		return samosa;
	}
}
